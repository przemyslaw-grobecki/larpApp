<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealmTry.Views.InventoryPage">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Equipment" IconImageSource="icon_feed.png">
        <ContentPage.Content>
            <StackLayout>
                <Label Text="Equipment Implemented Here"
                       TextColor="Black"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="Backpack" IconImageSource="icon_feed.png">
        <ContentPage.Content>
            <StackLayout>
                <Label Text="Backpack Implemented Here"
                       TextColor="Black"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>