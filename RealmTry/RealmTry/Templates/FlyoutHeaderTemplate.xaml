            <RadialGradientBrush Center="0.4,0.4" >
                <GradientStop Color="white" Offset="0.1"/>
                <GradientStop Color="DeepSkyBlue" Offset="0.9"/>
            </RadialGradientBrush>
        </Frame.Background>
        <Grid>
            <Image Source="orange_tree.png" Scale="1.28" AnchorY="0.75">

            </Image>
            <Image Source="d20.png" Scale="0.7" AnchorX="1.25" AnchorY="1.35">
                
            </Image>
        </Grid>
    </Frame>
</Grid>